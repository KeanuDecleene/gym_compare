/* header bar */
#header {
  background-color: #2c2c2c;
}

/* header */
#headerTitle {
  color: #e6e6e6;
  font-size: 15px;
  font-weight: bold;
  letter-spacing: 2px;
}

/* closebtn */
#headerClose {
  background: transparent;
  border: none;
  border-radius: 6px;
}

#headerClose:hover {
  background-color: #ff4a4a;
}

#headerClose:pressed {
  background-color: #d63838;
}

#mainContent {
  background-color: #3a3a3a;
}
